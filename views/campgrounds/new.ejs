<% layout("layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Post New CampSite</h1>
  <div class="offset-md-3 col-md-6">
    <form
      action="/campgrounds"
      method="post"
      novalidate
      class="validated-form"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">title</label>
        <!-- nameにこの書き方をするとreq.bodyの中身はグループ化される -->
        <!-- {"campground":{"title":"aaa","location":"bbb"}} -->
        <input
          class="form-control"
          type="text"
          name="campground[title]"
          id="title"
          required
        />
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">location</label>
        <input
          class="form-control"
          type="text"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">OK!</div>
      </div>

      <div class="mb-3">
        <label for="formFileMultiple" class="form-label"
          >画像のアップロード</label
        >
        <input
          class="form-control"
          type="file"
          id="formFileMultiple"
          multiple
        />
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">price</label>
        <div class="input-group">
          <span class="input-group-text" id="price">￥</span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0"
            aria-label="price"
            name="campground[price]"
            required
          />
          <div class="valid-feedback">OK!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">description</label>
        <textarea
          class="form-control"
          type="text"
          name="campground[description]"
          id="description"
          required
        ></textarea>
        <div class="valid-feedback">OK!</div>
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Post!</button>
      </div>
    </form>
    <a href="/campgrounds">back</a>
  </div>
</div>
